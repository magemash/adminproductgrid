<?xml version="1.0"?>
<layout version="0.1.0">
    <adminproductgrid_adminhtml_product_index>
        <reference name="content">
            <block type="adminproductgrid/adminhtml_catalog_product_grid" name="productAdmin" />
        </reference>
    </adminproductgrid_adminhtml_product_index>
    <adminproductgrid_adminhtml_grid_index>
        <reference name="content">
            <block type="adminproductgrid/adminhtml_grid" name="gridAdmin" />
        </reference>
    </adminproductgrid_adminhtml_grid_index>

    <adminproductgrid_adminhtml_view_index>
        <reference name="content">
            <block type="adminproductgrid/adminhtml_view" name="gridAdmin" />
        </reference>
    </adminproductgrid_adminhtml_view_index>

    <adminproductgrid_adminhtml_grid_new>
        <update handle="adminproductgrid_adminhtml_grid_edit" />
    </adminproductgrid_adminhtml_grid_new>

    <adminproductgrid_adminhtml_grid_edit>
        <!--<update handle="editor"/>-->
        <reference name="content">
            <block type="adminproductgrid/adminhtml_grid_edit" name="grid_edit"></block>
        </reference>
        <reference name="left">
            <block type="adminproductgrid/adminhtml_grid_edit_tabs" name="grid_edit_tabs">
                <block type="adminproductgrid/adminhtml_grid_edit_tab_main" name="grid_edit_tab_main" />
                <action method="addTab"><name>main_section</name><block>grid_edit_tab_main</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="adminhtml/catalog_product_edit_js" template="catalog/product/js.phtml" name="catalog_product_js"></block>
        </reference>
    </adminproductgrid_adminhtml_grid_edit>

    <adminproductgrid_adminhtml_grid_fields>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="adminproductgrid/adminhtml_grid_edit_tab_fields" name="admin.grid.fields"/>
        </block>
    </adminproductgrid_adminhtml_grid_fields>
</layout>